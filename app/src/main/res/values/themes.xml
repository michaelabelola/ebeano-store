<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ebeano" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.Ebeano" parent="Base.Theme.Ebeano" />

    <!-- Splash theme for AndroidX SplashScreen -->
    <style name="Theme.Ebeano.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Ebeano</item>
    </style>
</resources>